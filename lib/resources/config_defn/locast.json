{
    "providers":{
        "id": null,
        "icon": "cast",
        "label": "Providers",
        "description": "Streaming Services",
        "sections":{
            "main":{
                "label": "Locast",
                "icon": "cast_connected",
                "description": "Settings for Locast",
                "settings":{
                    "locast_username":{
                        "label": "username",
                        "type": "string",
                        "default": null,
                        "level": 0,
                        "help": "Username used to log into the Locast website"
                    },
                    "locast_password":{
                        "label": "password",
                        "type": "password",
                        "default": null,
                        "level": 0,
                        "hidden": true,
                        "onInit": "lib.tvheadend.config_callbacks.load_encrypted_setting",
                        "help": "Server never provides current password to page.  Add to change password"
                    },
                    "override_latitude":{
                        "label": "override_latitude",
                        "type": "float",
                        "default": null,
                        "level": 4,
                        "help": null
                    },
                    "override_longitude":{
                        "label": "override_longitude",
                        "type": "float",
                        "default": null,
                        "level": 4,
                        "help": null
                    },
                    "override_zipcode":{
                        "label": "override_zipcode",
                        "type": "string",
                        "default": null,
                        "level": 4,
                        "help": null
                    },
                    "mock_location":{
                        "label": "mock_location",
                        "type": "string",
                        "default": null,
                        "level": 4,
                        "help": null
                    },
                    "fcc_delay":{
                        "label": "fcc_delay",
                        "type": "integer",
                        "default": 1296000,
                        "level": 3,
                        "help": "Default pulls from fcc website every 15 days.  Does not change often. Removing files will force auto-pull"
                    }
                }
            },
            "freeaccount":{
                "label": "FreeAccount",
                "icon": "account_circle",
                "description": "Setting that pertain to the locast user free account",
                "settings":{
                    "is_free_account":{
                        "label": "is_free_account",
                        "type": "boolean",
                        "default": true,
                        "level": 1,
                        "writable": false,
                        "help": "Auto-filled based on the locast account"
                    }
                }
            },
            "player":{
                "label": "Player",
                "icon": "local_movies",
                "description": "Settings related to the stream to the client",
                "settings":{
                    "stream_type":{
                        "label": "stream_type",
                        "type": "list",
                        "default": "internalproxy",
                        "values": ["m3u8redirect", "ffmpegproxy", "internalproxy"],
                        "level": 1,
                        "help": "M3U8 only used with subscriptions.  TVHeadend has bugs with the M3U8 file from Locast. ffmpeg uses ffmpeg and ffprobe.  Internal is the most efficient and cleanest solution."
                    },
                    "ffmpeg_path":{
                        "label": "ffmpeg_path",
                        "type": "path",
                        "default": null,
                        "level": 2,
                        "onInit": "lib.tvheadend.config_callbacks.set_ffmpeg_path",
                        "help": "Only used with stream_type=ffmpegproxy"
                    },
                    "ffprobe_path":{
                        "label": "ffprobe_path",
                        "type": "path",
                        "default": null,
                        "level": 2,
                        "onInit": "lib.tvheadend.config_callbacks.set_ffprobe_path",
                        "help": "Only used with stream_type=ffmpegproxy"
                    },
                    "stream_filter":{
                        "label": "stream_filter",
                        "type": "string",
                        "default": "^.*//cdn.*$",
                        "level": 3,
                        "help": "Only used with stream_type=internalproxy"
                    }
                }
            }
        }
    }
}

