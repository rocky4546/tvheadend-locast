{
    "general":{
        "id": null,
        "label": null,
        "sections":{
            "display":{
                "label": "Display",
                "settings":{
                    "display_level":{
                        "label": "Display Level",
                        "type": "list",
                        "default": "1-Standard",
                        "values": ["0-Basic", "1-Standard", 
                            "2-Expert", "3-Advanced"],
                        "level": 0,
                        "help": "Displays settings based on complexity"
                    },
                    "theme":{
                        "label": "Theme",
                        "type": "list",
                        "default": "blueradiance",
                        "values": ["appletv", "black", "blueradiance", 
                            "dark", "dark-red", "halloween", "holiday", 
                            "light", "light-blue", "light-pink", 
                            "light-purple", "light-red", "spring", "wmc"],
                        "level": 0,
                        "help": "Changes the way the page appears"
                    }
                }
            },
            "main":{
                "label": "Main",
                "settings":{
                    "uuid":{
                        "label": "UUID",
                        "type": "string",
                        "default": null,
                        "level": 4,
                        "help": null
                    },
                    "plex_accessible_ip":{
                        "label": "plex_accessible_ip",
                        "type": "string",
                        "default": "0.0.0.0",
                        "level": 1,
                        "writable": false,
                        "help": "Use 0.0.0.0 for any IP"
                    },
                    "plex_accessible_port":{
                        "label": "plex_accessible_port",
                        "type": "integer",
                        "default": 5004,
                        "level": 1,
                        "help": "Port used to stream. Default is 5004"
                    },
                    "bind_ip":{
                        "label": "bind_ip",
                        "type": "string",
                        "default": "0.0.0.0",
                        "level": 4,
                        "writable": false,
                        "help": null
                    },
                    "bind_port":{
                        "label": "bind_port",
                        "type": "integer",
                        "default": 6077,
                        "level": 4,
                        "help": null
                    },
                    "tuner_count":{
                        "label": "tuner_count",
                        "type": "integer",
                        "default": 3,
                        "level": 2,
                        "help": "Number of streams active at one time."
                    },
                    "concurrent_listeners":{
                        "label": "concurrent_listeners",
                        "type": "integer",
                        "default": 10,
                        "level": 2,
                        "help": "Number of simultaneous HTTP requests.  Should be at least twice the counts"
                    },
                    "cache_dir":{
                        "label": "cache_dir",
                        "type": "path",
                        "default": null,
                        "level": 3, 
                        "help": "Leave as default unless moving the cache folder outside of the install directory"
                    },
                    "locast_username":{
                        "label": "locast_username",
                        "type": "string",
                        "default": null,
                        "level": 0,
                        "help": "Username used to log into the Locast website"
                    },
                    "locast_password":{
                        "label": "locast_password",
                        "type": "password",
                        "default": null,
                        "level": 0,
                        "hidden": true,
                        "help": "Empty means do not change. Server never provides current password to page"
                    },
                    "disable_ssdp":{
                        "label": "disable_ssdp",
                        "type": "boolean",
                        "default": false,
                        "level": 2,
                        "help": "Not required for TVHeadend.  Needed for Emby, Plex, etc"
                    },
                    "epg_update_frequency":{
                        "label": "epg_update_frequency",
                        "type": "integer",
                        "default": 43200,
                        "level": 2,
                        "help": "Default=12 hours.  Time between FORCED updates. Updates also occur on HTTP requests"
                    },
                    "epg_update_days":{
                        "label": "epg_update_days",
                        "type": "integer",
                        "default": 7,
                        "level": 2,
                        "help": "Locast max is 7 days"
                    },
                    "override_latitude":{
                        "label": "override_latitude",
                        "type": "float",
                        "default": null,
                        "level": 4,
                        "help": null
                    },
                    "override_longitude":{
                        "label": "override_longitude",
                        "type": "float",
                        "default": null,
                        "level": 4,
                        "help": null
                    },
                    "override_zipcode":{
                        "label": "override_zipcode",
                        "type": "string",
                        "default": null,
                        "level": 4,
                        "help": null
                    },
                    "mock_location":{
                        "label": "mock_location",
                        "type": "string",
                        "default": null,
                        "level": 4,
                        "help": null
                    },
                    "ffmpeg_path":{
                        "label": "ffmpeg_path",
                        "type": "path",
                        "default": null,
                        "level": 3,
                        "help": "Only used with stream_type=ffmpegproxy"
                    },
                    "use_old_plex_interface":{
                        "label": "use_old_plex_interface",
                        "type": "boolean",
                        "default": false,
                        "level": 4,
                        "help": null
                    },
                    "bytes_per_read":{
                        "label": "bytes_per_read",
                        "type": "integer",
                        "default": 255304,
                        "level": 3,
                        "help": "Only used with stream_type=ffmpegproxy"
                    },
                    "reporting_model":{
                        "label": "reporting_model",
                        "type": "string",
                        "default": "HDHR5-4US",
                        "level": 4,
                        "help": null
                    },
                    "reporting_friendly_name":{
                        "label": "reporting_friendly_name",
                        "type": "string",
                        "default": "Locast Rocky4546",
                        "level": 4,
                        "help": null
                    },
                    "reporting_firmware_name":{
                        "label": "reporting_firmware_name",
                        "type": "string",
                        "default": "hdhomerun5_atsc",
                        "level": 4,
                        "help": null
                    },
                    "reporting_firmware_ver":{
                        "label": "reporting_firmware_ver",
                        "type": "string",
                        "default": null,
                        "level": 1,
                        "writable": false,
                        "onInit": "lib.tvheadend.utils.set_version",
                        "help": "Current version installed"
                    },
                    "tuner_type":{
                        "label": "tuner_type",
                        "type": "string",
                        "default": "Antenna",
                        "level": 4,
                        "writable": false,
                        "help": null
                    },
                    "fcc_delay":{
                        "label": "fcc_delay",
                        "type": "integer",
                        "default": 1296000,
                        "level": 3,
                        "help": "Default pulls from fcc website every 15 days.  Does not change often. Removing files will force auto-pull"
                    },
                    "verbose":{
                        "label": "verbose",
                        "type": "boolean",
                        "default": false,
                        "level": 3,
                        "help": "Used in some locast2plex modules."
                    },
                    "quiet_print":{
                        "label": "quiet_print",
                        "type": "boolean",
                        "default": true,
                        "level": 3,
                        "help": "Print statements in locast2plex modules are silenced."
                    },
                    "encrypt_key":{
                        "label": "encrypt_key",
                        "type": "string",
                        "default": null,
                        "level": 4,
                        "help": null
                    },
                    "use_encryption":{
                        "label": "use_encryption",
                        "type": "boolean",
                        "default": true,
                        "level": 2,
                        "help": "Will encrypt the password using a self-generated key.  Use with only one user running service."
                    },
                    "login_invalid":{
                        "label": "login_invalid",
                        "type": "integer",
                        "default": null,
                        "level": 2,
                        "help": "Normally empty, but if locast login locks out, it will be set. Lockouts are normally 60 minutes. Manually clearing entry will allow a re-login attempt on restart"
                    },
                    "login_timeout":{
                        "label": "login_timeout",
                        "type": "integer",
                        "default": 4000,
                        "level": 4,
                        "help": null
                    },
                    "local_ip":{
                        "label": "local_ip",
                        "type": "string",
                        "default": "0.0.0.0",
                        "level": 1,
                        "help": "Use instead of plex_accessible_ip. 0.0.0.0 means bind to all IPs and use the main IP address for json data"
                    },
                    "disable_web_config":{
                        "label": "disable_web_config",
                        "type": "boolean",
                        "default": false,
                        "level": 3,
                        "help": "Security setting to disable the ability to edit the configuration remotely"
                    },
                    "config_file":{
                        "label": "config_file",
                        "type": "path",
                        "default": null,
                        "level": 4,
                        "help": null,
                        "onChange": "lib.tvheadend.utils.noop",
                        "onInit": "lib.tvheadend.utils.noop"
                    },
                    "web_admin_port":{
                        "label": "web_admin_port",
                        "type": "integer",
                        "default": 6077,
                        "level": 1,
                        "help": "Port for main web-site.  TVHeadend can use any port; however, others such as Plex and Emby need it on port 80 for full HDHR compatilibity"
                    }
                }
            },
            "freeaccount":{
                "label": "FreeAccount",
                "settings":{
                    "is_free_account":{
                        "label": "is_free_account",
                        "type": "boolean",
                        "default": true,
                        "level": 1,
                        "writable": false,
                        "help": "Auto-filled based on the locast account"
                    },
                    "min_pkt_rcvd":{
                        "label": "min_pkt_rcvd",
                        "type": "integer",
                        "default": 10,
                        "level": 3,
                        "help": "Only used with stream_type=ffmpegproxy"
                    },
                    "max_pkt_rcvd":{
                        "label": "max_pkt_rcvd",
                        "type": "integer",
                        "default": 100,
                        "level": 3,
                        "help": "Only used with stream_type=ffmpegproxy"
                    },
                    "pts_minimum":{
                        "label": "pts_minimum",
                        "type": "integer",
                        "default": 10000000,
                        "level": 3,
                        "help": "Only used with stream_type=ffmpegproxy"
                    },
                    "pts_max_delta":{
                        "label": "pts_max_delta",
                        "type": "integer",
                        "default": 10000000,
                        "level": 3,
                        "help": "Only used with stream_type=ffmpegproxy"
                    },
                    "refresh_rate":{
                        "label": "refresh_rate",
                        "type": "integer",
                        "default": 800,
                        "level": 3,
                        "help": "Must be less than 15 minute Locast timeout for free accounts"
                    }
                }
            },
            "epg":{
                "label": "EPG",
                "settings":{
                    "epg_prefix":{
                        "label": "epg_prefix",
                        "type": "string",
                        "default": "",
                        "level": 1,
                        "help": "Used with channel number to order channel list"
                    },
                    "epg_suffix":{
                        "label": "epg_suffix",
                        "type": "string",
                        "default": "",
                        "level": 1,
                        "help": "Used with channel number to order channel list"
                    },
                    "description":{
                        "label": "description",
                        "type": "list",
                        "default": "extend",
                        "values": ["normal", "brief", "extend"],
                        "level": 1,
                        "help": null
                    },
                    "genre":{
                        "label": "genre",
                        "type": "list",
                        "default": "tvheadend",
                        "values": ["normal", "tvheadend"],
                        "level": 1,
                        "help": "TVHeadend uses specific genre to get colors on tv guide"
                    },
                    "min_refresh_rate":{
                        "label": "min_refresh_rate",
                        "type": "integer",
                        "default": 14400,
                        "level": 3,
                        "help": "Default=4 hours. When a HTTP request for epg data is received, will refresh the data if older than this value."
                    }
                }
            },
            "player":{
                "label": "Player",
                "settings":{
                    "stream_type":{
                        "label": "stream_type",
                        "type": "list",
                        "default": "internalproxy",
                        "values": ["m3u8redirect", "ffmpegproxy", "internalproxy"],
                        "level": 2,
                        "help": "M3U8 only used with subscriptions.  TVHeadend has bugs with the M3U8 file from Locast. ffmpeg uses ffmpeg and ffprobe.  Internal is the most efficient and cleanest solution."
                    },
                    "ffprobe_path":{
                        "label": "ffprobe_path",
                        "type": "path",
                        "default": null,
                        "level": 2,
                        "help": "Only used with stream_type=ffmpegproxy"
                    },
                    "stream_filter":{
                        "label": "stream_filter",
                        "type": "string",
                        "default": null,
                        "level": 2,
                        "help": "Only used with stream_type=internalproxy"
                    }
                }
            },
            "hdhomerun":{
                "label": "HDHomeRun",
                "settings":{
                    "disable_hdhr":{
                        "label": "disable_hdhr",
                        "type": "boolean",
                        "default": true,
                        "level": 2,
                        "help": "Enables HDHR protocol on port 65001. Not required for TVHeadend"
                    },
                    "hdhr_id":{
                        "label": "hdhr_id",
                        "type": "string",
                        "default": null,
                        "level": 2,
                        "help": "Unique CRC-based hex code for this install"
                    },
                    "udp_netmask":{
                        "label": "udp_netmask",
                        "type": "string",
                        "default": null,
                        "level": 2,
                        "help": "Used to reduce traffic from UDP broadcast messages. Recommend using anetmask filter to a single IP, i.e., 192.168.1.130/32"
                    }
                }
            },
            "loggers":{
                "label": "loggers",
                "settings":{
                    "keys":{
                        "label": "keys",
                        "type": "string",
                        "default": "root",
                        "level": 4,
                        "onChange": "lib.tvheadend.utils.logging_refresh",
                        "help": null
                    }
                }
            },
            "logger_root":{
                "label": "logger_root",
                "settings":{
                    "level":{
                        "label": "level",
                        "type": "list",
                        "values": ["DEBUG", "INFO", "WARNING", "ERROR", "CRITICAL"],
                        "default": "WARNING",
                        "level": 2,
                        "onChange": "lib.tvheadend.utils.logging_refresh",
                        "help": "Default is WARNING"
                    },
                    "handlers":{
                        "label": "handlers",
                        "type": "string",
                        "default": "loghandler",
                        "level": 4,
                        "onChange": "lib.tvheadend.utils.logging_refresh",
                        "help": null
                    }
                }
            },
            "handlers":{
                "label": "handlers",
                "settings":{
                    "keys":{
                        "label": "keys",
                        "type": "string",
                        "default": "loghandler",
                        "level": 4,
                        "onChange": "lib.tvheadend.utils.logging_refresh",
                        "help": null
                    }
                }
            },
            "formatters":{
                "label": "formatters",
                "settings":{
                    "keys":{
                        "label": "keys",
                        "type": "string",
                        "default": "extend,simple",
                        "level": 4,
                        "onChange": "lib.tvheadend.utils.logging_refresh",
                        "help": null
                    }
                }
            },
            "handler_loghandler":{
                "label": "handler_loghandler",
                "settings":{
                    "class":{
                        "label": "class",
                        "type": "string",
                        "default": "StreamHandler",
                        "level": 4,
                        "onChange": "lib.tvheadend.utils.logging_refresh",
                        "help": null
                    },
                    "formatter":{
                        "label": "formatter",
                        "type": "list",
                        "values": ["extend", "simple"],
                        "default": "extend",
                        "level": 2,
                        "onChange": "lib.tvheadend.utils.logging_refresh",
                        "help": "Use simple for syslog and extend for file logging"
                    },
                    "args":{
                        "label": "args",
                        "type": "string",
                        "default": "(sys.stdout,)",
                        "level": 4,
                        "onChange": "lib.tvheadend.utils.logging_refresh",
                        "help": null
                    }
                }
            },
            "formatter_extend":{
                "label": "formatter_extend",
                "settings":{
                    "format":{
                        "label": "format",
                        "type": "string",
                        "default": "%(asctime)s-%(levelname)s:%(module)s %(message)s",
                        "level": 3,
                        "onChange": "lib.tvheadend.utils.logging_refresh",
                        "help": "Format for extend logging"
                    }
                }
            },
            "formatter_simple":{
                "label": "formatter_simple",
                "settings":{
                    "format":{
                        "label": "format",
                        "type": "string",
                        "default": "%(levelname)s:%(module)s %(message)s",
                        "level": 3,
                        "onChange": "lib.tvheadend.utils.logging_refresh",
                        "help": "Format for simple logging"
                    }
                }
            }
        }
    }
}